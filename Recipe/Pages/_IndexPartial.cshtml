@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div >
    @if (SignInManager.IsSignedIn(User))
    {
    <div>Hello @User.Identity.Name!</div>
    <div class="header-user"></div>    
    }
    else
    {
        <h1>Placeholder</h1>
        
    }
</div>